<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/send_message_layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="15dp"
              >
              
	<TextView android:id="@+id/send_message_text"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:layout_marginLeft="0dp"
      		android:layout_marginTop="0dp"
      		android:textColor="#ffffffff"
	   		/>
    
    <EditText android:id="@+id/send_message_msg_edit"
      		android:layout_width="fill_parent"
      		android:inputType="text"
      		android:layout_height="wrap_content"
      		android:layout_marginLeft="0dp"
      		android:layout_marginTop="0dp"
      		android:lines="1"
      		/>

    <LinearLayout android:id="@+id/send_message_layout_btn"
            	android:orientation="horizontal"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	>   
                   
	<Button android:id="@+id/send_message_send_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="0dp"
			android:text="SEND"
			/>
	
	<Button android:id="@+id/send_message_cancel_button"
			android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="0dp"
	        android:text="CANCEL"
	        />
	</LinearLayout>
</LinearLayout>