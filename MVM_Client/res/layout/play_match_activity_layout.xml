<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/play_match_activity_layout_root"
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:keepScreenOn="true">
		  
    <LinearLayout android:id="@+id/play_match_left_panel_layout"
        	android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:gravity="center_horizontal">
		    
		<TextView android:id="@+id/play_match_set_result_text"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="0:0"/>
		    
		   <TextView android:id="@+id/play_match_little_result_text"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="-:-"/>
		
	    <LinearLayout android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		   
		    <Button android:id="@+id/play_match_squad_btn"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:onClick="onClickSquadBtn"
			    android:text="SKŁAD"/>
		    
		    <Button android:id="@+id/play_match_tactic_btn"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:onClick="onClickTacticBtn"
			    android:text="TAKTYKA"/>
		    
		    <Button android:id="@+id/play_match_time_btn"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:onClick="onClickTimeBtn"
			    android:text="CZAS"/>
	    
    	</LinearLayout>
    	
	    <TextView android:id="@+id/play_match_home_team_id"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="#ff30ff30"
			    android:text="Gospodarz: "/>
	    
	    <TextView android:id="@+id/play_match_away_team_id"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="#ff3030ff"
			    android:text="Gość: "/>
	    
	    <TextView android:id="@+id/play_match_time_txt"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Przerwa: --"/>
    	
	</LinearLayout>
    
    <ScrollView android:id="@+id/play_match_action_scroll_view"
        	android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginLeft="50dp">
		    
        <LinearLayout android:id="@+id/play_match_action_scroll_view_lin"
        	android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
            
        </LinearLayout>
        
    </ScrollView>
    
</LinearLayout>