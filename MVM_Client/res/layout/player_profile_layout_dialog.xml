<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/player_profil_dialog_layout_root"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:minWidth="210dp"
              android:layout_height="fill_parent"
              android:gravity="left"
              android:padding="15dp">
              
    <LinearLayout android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      		
    <TextView android:id="@+id/player_profil_dialog_user_id_text"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
			android:visibility="invisible"
      		/>
        	
    <TextView android:id="@+id/player_profil_dialog_nick_text"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:layout_marginTop="0dp"
      		android:maxLines="1"
      		android:text=""
      		android:textColor="#ffffffff"
      		/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      		
    <TextView android:id="@+id/player_profil_dialog_team_id_text"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
			android:visibility="invisible"
      		/>
        	
    <TextView android:id="@+id/player_profil_dialog_team_text"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:layout_marginTop="0dp"
      		android:maxLines="1"
      		android:text=""
      		android:textColor="#ffffffff"
      		/>
    </LinearLayout>
    
        <LinearLayout android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      		
    <TextView android:id="@+id/player_profil_dialog_league_id_text"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
			android:visibility="invisible"
      		/>
        	
    <TextView android:id="@+id/player_profil_dialog_league_text"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:layout_marginTop="0dp"
      		android:maxLines="1"
      		android:text=""
      		android:textColor="#ffffffff"
      		/>
    </LinearLayout>
<LinearLayout android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">
              
    <Button android:id="@+id/player_profil_dialog_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"/>
	
	<Button android:id="@+id/player_profil_dialog_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="CANCEL"/>
	</LinearLayout>
</LinearLayout>