<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/tactic_block_layout_root"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent" 
    		android:orientation="vertical">
    		
        <LinearLayout android:layout_width="match_parent"
	    		android:layout_height="wrap_content" 
	    		android:orientation="horizontal">
        
        <TextView android:id="@+id/tactic_layout_left_btn"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    		android:minWidth="150dp"
	    		android:text="ZAWODNIK"/>
        
        <TextView android:id="@+id/tactic_layout_title_text"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    		android:minWidth="150dp"
	    		android:text="Block na 3"/>
        
        <TextView android:id="@+id/tactic_layout_right_btn"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    		android:minWidth="150dp"
	    		android:text="Block pref: "/> 
    </LinearLayout>		
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:layout_marginBottom="50dp">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Druzyna: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_team_block_3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_trzech"/>
        
        <Spinner android:id="@+id/spinner_team_block_opt"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_opcja"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Atakujacy: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_att_block_3"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_trzech"/>
        
        <Spinner android:id="@+id/spinner_att_block_opt"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_opcja"/>
        
        <Button android:id="@+id/tactic_block_att_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Przyjmujacy 1: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_rec1_block_3"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_trzech"/>
        
        <Spinner android:id="@+id/spinner_rec1_block_opt"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_opcja"/>
        
        <Button android:id="@+id/tactic_block_rec1_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Srodkowy 1: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_blo1_block_3"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_trzech"/>
        
        <Spinner android:id="@+id/spinner_blo1_block_opt"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_opcja"/>
        
        <Button android:id="@+id/tactic_block_blo1_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Rozgrywajacy: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_set_block_3"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_trzech"/>
        
        <Spinner android:id="@+id/spinner_set_block_opt"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_opcja"/>
        
        <Button android:id="@+id/tactic_block_set_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Przyjmujacy 2: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_rec2_block_3"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_trzech"/>
        
        <Spinner android:id="@+id/spinner_rec2_block_opt"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_opcja"/>
        
        <Button android:id="@+id/tactic_block_rec2_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Srodkowy 2: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_blo2_block_3"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_trzech"/>
        
        <Spinner android:id="@+id/spinner_blo2_block_opt"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/blok_opcja"/>
        
        <Button android:id="@+id/tactic_block_blo2_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
</LinearLayout>