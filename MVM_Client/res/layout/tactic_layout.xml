<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent" 
    		android:orientation="vertical"
    		android:keepScreenOn="true">
	
    <LinearLayout android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:gravity="center">
        
        <Button android:id="@+id/tactic_layout_left_btn"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:background="@drawable/tactic_arrow_left"/>
        
        <TextView android:id="@+id/tactic_layout_title_text"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="TACTIC ATTACK"/>
        
        <Button android:id="@+id/tactic_layout_right_btn"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="@drawable/tactic_arrow_right"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
    		android:layout_height="wrap_content" 
    		android:orientation="horizontal"
    		android:gravity="center">
        
        <Button android:id="@+id/tactic_layout_send_btn"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="SEND TACTIC"/>
        
        <Button android:id="@+id/tactic_layout_get_from_serwer_btn"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="GET TACTIC FROM SERVER"/>
        
        <TextView android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:text="Czy wazniejsza taktyka DRUZYNY :"/>
        
        <CheckBox android:id="@+id/tactic_layout_tactic_checkbox"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/> 
    </LinearLayout>
    
	<ScrollView android:layout_width="match_parent"
    			android:layout_height="match_parent">
    			
	    <RelativeLayout android:layout_width="match_parent"
    				android:layout_height="match_parent">
    				
	        <include android:id="@+id/tactic_layout_attack_layout"
	            	layout="@layout/tactic_attack_layout"/>
	        
	        <include android:id="@+id/tactic_layout_serwis_layout"
	            	layout="@layout/tactic_serwis_layout"/>
	        
	        <include android:id="@+id/tactic_layout_block_layout"
	            	layout="@layout/tactic_block_layout"/>
	        
	        <include android:id="@+id/tactic_layout_reception_layout"
	            	layout="@layout/tactic_reception_layout"/>
	        
	        <include android:id="@+id/tactic_layout_set_layout"
	            	layout="@layout/tactic_set_layout"/>
	        
	    </RelativeLayout>
	    
	</ScrollView>
   
</LinearLayout>
 