<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/tactic_serwis_layout_root"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent" 
    		android:orientation="vertical">
    		
    <LinearLayout android:layout_width="match_parent"
	    		android:layout_height="wrap_content" 
	    		android:orientation="horizontal">
        
        <TextView android:id="@+id/tactic_layout_left_btn"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    		android:minWidth="150dp"
	    		android:text="ZAWODNIK"/>
        
        <TextView android:id="@+id/tactic_layout_title_text"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    		android:minWidth="150dp"
	    		android:text="Serwis sila: "/>
        
        <TextView android:id="@+id/tactic_layout_right_btn"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    		android:minWidth="150dp"
	    		android:text="Serwis kierunek: "/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:layout_marginBottom="50dp">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Druzyna: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_team_serwis_str"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_sila"/>
        
        <Spinner android:id="@+id/spinner_team_serwis_dir"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_kierunek"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Atakujacy: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_att_serwis_str"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_sila"/>
        
        <Spinner android:id="@+id/spinner_att_serwis_dir"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_kierunek"/>
        
        <Button android:id="@+id/tactic_serwis_att_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Przyjmujacy 1: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_rec1_serwis_str"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_sila"/>
        
        <Spinner android:id="@+id/spinner_rec1_serwis_dir"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_kierunek"/>
        
        <Button android:id="@+id/tactic_serwis_rec1_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Srodkowy 1: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_blo1_serwis_str"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_sila"/>
        
        <Spinner android:id="@+id/spinner_blo1_serwis_dir"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_kierunek"/>
        
        <Button android:id="@+id/tactic_serwis_blo1_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Rozgrywajacy: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_set_serwis_str"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_sila"/>
        
        <Spinner android:id="@+id/spinner_set_serwis_dir"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_kierunek"/>
        
        <Button android:id="@+id/tactic_serwis_set_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Przyjmujacy 2: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_rec2_serwis_str"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_sila"/>
        
        <Spinner android:id="@+id/spinner_rec2_serwis_dir"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_kierunek"/>
        
        <Button android:id="@+id/tactic_serwis_rec2_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
        
        <TextView android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:text="Srodkowy 2: "
        		android:minWidth="150dp"/>
        
        <Spinner android:id="@+id/spinner_blo2_serwis_str"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_sila"/>
        
        <Spinner android:id="@+id/spinner_blo2_serwis_dir"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:entries="@array/serwis_kierunek"/>
        
        <Button android:id="@+id/tactic_serwis_blo2_profile_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="PROFIL"/>
        
    </LinearLayout>
    
</LinearLayout>